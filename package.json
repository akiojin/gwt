{
  "name": "@akiojin/gwt",
  "version": "2.9.1",
  "description": "Interactive Git worktree manager for Claude Code with graphical branch selection",
  "main": "dist/index.js",
  "bin": {
    "gwt": "bin/gwt.js"
  },
  "type": "module",
  "packageManager": "bun@latest",
  "scripts": {
    "build": "bun run build:cli && bun run build:web",
    "build:cli": "tsc",
    "build:server": "tsc",
    "build:client": "vite build src/web/client",
    "build:web": "bun run build:client",
    "dev": "tsc --watch",
    "dev:server": "bun run build:server && bun --watch src/web/server/index.ts",
    "dev:client": "vite src/web/client",
    "dev:web": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "start": "bun ./dist/index.js",
    "start:web": "node ./dist/index.js serve",
    "prepare": "husky",
    "pretest": "bun run build:cli",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"src/**/*.tsx\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "git",
    "worktree",
    "claude",
    "claude code",
    "codex",
    "gemini",
    "gpt",
    "cli",
    "interactive",
    "branch",
    "development"
  ],
  "author": "akiojin",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@fastify/static": "^8.0.3",
    "@fastify/websocket": "^11.2.0",
    "@tanstack/react-query": "^5.66.1",
    "chalk": "^5.4.1",
    "execa": "^9.6.0",
    "fastify": "^5.2.1",
    "ink": "^6.3.1",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "node-pty": "1.1.0-beta39",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.2.0",
    "react-router-dom": "^7.2.0",
    "string-width": "^8.1.0",
    "ws": "^8.18.0",
    "xterm": "^5.4.0-beta.37",
    "xterm-addon-fit": "^0.9.0-beta.37",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.51.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.0.3",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "concurrently": "^9.1.2",
    "esbuild": "0.27.0",
    "eslint": "^9.31.0",
    "happy-dom": "^20.0.8",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "*.md": "bunx --bun markdownlint-cli -c .markdownlint.json",
    "*.{ts,tsx}": [
      "bunx eslint --max-warnings=0",
      "bunx prettier --check"
    ]
  },
  "files": [
    "dist/",
    "src/",
    "bin/",
    "README.md"
  ]
}
