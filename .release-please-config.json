{
  "bootstrap-sha": "HEAD",
  "default-branch": "main",
  "packages": {
    ".": {
      "release-type": "node",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "extra-files": [
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.package.version"
        },
        {
          "type": "toml",
          "path": "crates/gwt-core/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "crates/gwt-cli/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "crates/gwt-cli/Cargo.toml",
          "jsonpath": "$.dependencies.gwt-core.version"
        }
      ]
    }
  },
  "pull-request-title-pattern": "chore(release): ${version}"
}
